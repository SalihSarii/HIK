<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet" />

  <link rel="stylesheet" href="index.css" />
  <title>Herkes İçin Kütüphane</title>
</head>

<body>
  <!--          Header -->
  <%- include('partials/_navigation') -%>
    <div class="row">
      <div class="container text-center logo">
        <img src="Icons/Koyu Gri Turuncu Perakende Logo.gif" alt="logo" class="rounded mx-auto d-block" width="300" />
      </div>
    </div>
    </div>
    </header>
    <!-- Arama -->
    <div class="row">
      <div class="container text-center">
        <form method="get" action="/kaynakArama" class="tm-contact-form" enctype="multipart/form-data">
          <div class="input-group">
            <div class="form-floating mb-3" style="max-width: 584px !important; margin-left: auto">
              <input type="text" class="form-control" placeholder="Kaynak ara" name="baslik" id="submit" />
              <label for="floatingInputArama">Ara</label>
            </div>
            <button type="submit" class="btn btn-outline-secondary mb-3 border-0 " style="margin-right: auto">
              ARA
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- Cardlar -->
    <div class="container">
      <div class="row">
        <h4 class="top-3 text-center mb-3">En Çok İndirilenler</h4>
        <div class="col-3">
          <div class="row">
            <%kaynakDers.forEach(function(ders){%>
              <div class="card mb-3" style="width: 18rem; height: 500px;">
                <div class="frame" style="background-image: url('<%=ders.img%>');"></div>
                <div class="card-body margin-left-auto">
                  <h5 class="card-title">
                    <%=ders.baslik%>
                  </h5>
                  <p class="card-text"><b>Tür:</b> <%=ders.kaynakturu%>
                  </p>
                  <p class="card-text"><b>İndirilme Sayısı:</b> <%=ders.indirilmeSayisi%>
                  </p>
                  <div class="buton text-center">
                    <a href="<%=ders.pdf%>" class="btn btn-outline-secondary btn-lg">İndir</a>
                  </div>
                </div>
              </div>
              <% }); %>
          </div>
        </div>

        <div class="col-3 ">
          <div class="row">
            <%kaynakOkuma.forEach(function(okuma){%>
              <div class="card mb-3" style="width: 18rem; height: 500px;">
                <div class="frame card-img-top" style="background-image: url('<%=okuma.img%>');"></div>
                <div class="card-body margin-left-auto">
                  <h5 class="card-title">
                    <%=okuma.baslik%>
                  </h5>
                  <p class="card-text"><b>Tür:</b> <%=okuma.kaynakturu%>
                  </p>
                  <p class="card-text"><b>İndirilme Sayısı:</b> <%=okuma.indirilmeSayisi%>
                  </p>
                  <div class="buton text-center">
                    <a href="<%=okuma.pdf%>" class="btn btn-outline-secondary btn-lg">İndir</a>
                  </div>
                </div>
              </div>
              <% }); %>
          </div>
        </div>
        <div class="col-3">
          <div class="row">
            <%kaynakSesli.forEach(function(sesli){%>
              <div class="card mb-3" style="width: 18rem; height: 500px;">
                <div class="frame card-img-top" style="background-image: url('<%=sesli.img%>');"></div>
                <div class="card-body margin-left-auto">
                  <h5 class="card-title">
                    <%=sesli.baslik%>
                  </h5>
                  <p class="card-text"><b>Tür:</b> <%=sesli.kaynakturu%>
                  </p>
                  <p class="card-text"><b>İndirilme Sayısı:</b> <%=sesli.indirilmeSayisi%>
                  </p>
                  <div class="buton text-center">
                    <a href="<%=sesli.pdf%>" class="btn btn-outline-secondary btn-lg">İndir</a>
                  </div>
                </div>
              </div>
              <% }); %>
          </div>
        </div>
          <div class="col-3">
            <div class="row">
              <%kaynakDiger.forEach(function(diger){%>
                <div class="card mb-3" style="width: 18rem; height: 500px;">
                <div class="frame card-img-top" style="background-image: url('<%=diger.img%>');"></div>
                  <div class="card-body margin-left-auto">
                    <h5 class="card-title">
                      <%=diger.baslik%>
                    </h5>
                   <p class="card-text"><b>Tür:</b> <%=diger.kaynakturu%>
                   </p>
                   <p class="card-text"><b>İndirilme Sayısı:</b> <%=diger.indirilmeSayisi%>
                   </p>
                   <div class="buton text-center">
                     <a href="<%=diger.pdf%>" class="btn btn-outline-secondary btn-lg">İndir</a>
                   </div>
                  </div>
                </div>
                <% }); %>
            </div>
          </div>
        </div>
        <%if( girisYapildi != '2'){ %>
          <input id="girisYapildiKontrol" type="hidden" value="<%= girisYapildi%>">
          <%}else{%>
            <input id="girisYapildiKontrol" type="hidden" value="">
            <%}%>       
        
       
        <!-- Scriptler -->
        <script>
            var veri = localStorage.getItem('girisDegeri');
            console.log(veri)
            if(veri == "false"){
            var oke = document.getElementById('girisYapildiKontrol').value;
                        
            if(oke=="true"){
              localStorage.setItem("girisDegeri","true");              
            }else {
              localStorage.setItem("girisDegeri","false");              
          };
        }
          
        </script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script defer src="/JS/login.js"></script>        
</body>

</html>