<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet" />

  <link rel="stylesheet" href="index.css" />
  <title>Herkes İçin Kütüphane</title>
</head>

<body>
  <!--          Header
    TODO: Kılavuz - Yardım/talep - Ticketlar (droprown olmıcak)
    TODO: Logo eklenicek renkler değiştirilebilir (Arkaplan )-->
  <%- include('partials/_navigation') -%>
    <div class="row">
      <div class="container text-center logo">
        <img src="Icons/Koyu Gri Turuncu Perakende Logo.gif" alt="logo" class="rounded mx-auto d-block" width="300" />
      </div>
    </div>
    </div>
    </header>
    <!-- Arama -->
    <div class="row">
      <div class="container text-center">
        <form method="get" action="/kaynakArama" class="tm-contact-form" enctype="multipart/form-data">
          <div class="input-group">
            <div class="form-floating mb-3" style="max-width: 584px !important; margin-left: auto">
              <input type="text" class="form-control" placeholder="Kaynak ara" name="baslik" id="submit" />
              <!-- <input type="hidden" class="form-control" placeholder="Kaynak ara" name="baslik" value="Sed auctor odio a purus. Duis elementum, dui" id="submit" /> -->
              <!-- onkeypress="AramayaYonlendir();"-->
              <label for="floatingInputArama">Ara</label>
            </div>
            <button type="submit" class="btn btn-secondary mb-3 " style="margin-right: auto">
              ARA
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- Cardlar -->

    <div class="container">
      <div class="row">
        <div class="col-3">
          <div class="row">
            <%kaynakDers.forEach(function(ders){%>
              <div class="card" style="width: 18rem">
                <img src="<%=ders.img%>" class="card-img-top" alt="..." />
                <div class="card-body margin-left-auto">
                  <h5 class="card-title">
                    <%=ders.baslik%>
                  </h5>
                  <h5 class="card-title">Tür:<%=ders.kaynakturu%>
                  </h5>
                  <h5 class="card-title">İndirilme Sayısı:<%=ders.indirilmeSayisi%>
                  </h5>
                  <p class="card-text"></p>
                  <a href="#" class="btn btn-secondary">İndir</a>
                </div>
              </div>
              <% }); %>
          </div>
        </div>

        <div class="col-3 ">
          <div class="row">
            <%kaynakOkuma.forEach(function(okuma){%>
              <div class="card" style="width: 18rem">
                <img src="<%=okuma.img%>" class="card-img-top" alt="..." />
                <div class="card-body margin-left-auto">
                  <h5 class="card-title">
                    <%=okuma.baslik%>
                  </h5>
                  <h5 class="card-title">Tür:<%=okuma.kaynakturu%>
                  </h5>
                  <h5 class="card-title">İndirilme Sayısı:<%=okuma.indirilmeSayisi%>
                  </h5>
                  <p class="card-text"></p>
                  <a href="#" class="btn btn-secondary">İndir</a>
                </div>
              </div>
              <% }); %>
          </div>
        </div>
        <div class="col-3">
          <div class="row">
            <%kaynakSesli.forEach(function(sesli){%>
              <div class="card" style="width: 18rem">
                <img src="<%=sesli.img%>" class="card-img-top" alt="..." />
                <div class="card-body margin-left-auto">
                  <h5 class="card-title">
                    <%=sesli.baslik%>
                  </h5>
                  <h5 class="card-title">Tür:<%=sesli.kaynakturu%>
                  </h5>
                  <h5 class="card-title">İndirilme Sayısı:<%=sesli.indirilmeSayisi%>
                  </h5>
                  <p class="card-text"></p>
                  <a href="#" class="btn btn-secondary">İndir</a>
                </div>
              </div>
              <% }); %>
          </div>
        </div>
          <div class="col-3">
            <div class="row">
              <%kaynakDiger.forEach(function(diger){%>
                <div class="card" style="width: 18rem">
                  <img src="<%=diger.img%>" class="card-img-top" alt="..." />
                  <div class="card-body margin-left-auto">
                    <h5 class="card-title">
                      <%=diger.baslik%>
                    </h5>
                    <h5 class="card-title">Tür:<%=diger.kaynakturu%>
                    </h5>
                    <h5 class="card-title">İndirilme Sayısı:<%=diger.indirilmeSayisi%>
                    </h5>
                    <p class="card-text"></p>
                    <a href="#" class="btn btn-secondary">İndir</a>
                  </div>
                </div>
                <% }); %>
            </div>
          </div>
        </div>
        <!-- Footer -->
        <footer class="footer">
          <div class="container">
            <span class="text-muted">Place sticky footer content here.</span>
          </div>
        </footer>
        <!-- Scriptler -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script defer src="/JS/login.js"></script>
        <script src="/JS/arama.js"></script>
</body>

</html>